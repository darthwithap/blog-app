<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlogApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_crayola</item>
        <item name="colorPrimaryVariant">@color/blue_crayola_dark</item>
        <item name="colorOnPrimary">@color/just_white</item>
        <item name="backgroundColor">@color/just_white</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crayola_gray</item>
        <item name="colorSecondaryVariant">@color/crayola_gray_dark</item>
        <item name="colorOnSecondary">@color/just_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/blue_crayola_dark_transparent
        </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlogApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlogApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlogApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BlogApp.ShapableImageView.Rounded" parent="Theme.BlogApp">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Error" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="strokeColor">@color/error_red</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>
</resources>